<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>

    <!-- GAME START SCREEN -->
    <screen id="start" controller="com.napier.mad.screens.StartScreenController">
        <layer childLayout="center">
            <panel align="center" width="80%" height="10%" childLayout="horizontal">
                <control id="startButton" name="button" label="Start" width="95%" height="90%">
                    <interact onClick="onClickStartGame()" />
                </control>
            </panel>
        </layer>
    </screen>

    <!-- HUD SCREEN -->
    <screen id="hud" controller="com.napier.mad.screens.HudScreenController">
        <layer childLayout="vertical">
            <panel childLayout="horizontal" width="100%" height="200px" backgroundColor="#020202">
                <panel childLayout="center" width="80%" height="100%">
                    <text id="score" align="center" valign="center" font="Interface/Fonts/ManjariBold.fnt" text="Score" width="100%" height="100%" />
                </panel>
                <panel childLayout="center" width="20%" height="100%">
                    <control name="pauseButton" width="95%" height="95%" label="Pause">
                        <interact onClick="pauseGame()" />
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>

    <!-- GAME OVER SCREEN -->
    <!-- Lets the user return to main menu or restart the game -->
    <screen id="game_over" controller="com.napier.mad.screens.GameOverScreenController">
        <layer childLayout="center" backgroundColor="#0004" width="100%" height="100%">
            <panel width="100%" height="100%"/>
        </layer>
        <layer childLayout="center" width="100%" height="100%">
            <panel childLayout="center" width="90%" height="60%" backgroundColor="#0002AE04">
                <panel childLayout="vertical">
                    <control id="restartGame" name="button" align="center" label="Restart" width="50%" height="200px">
                        <interact onClick="onClickRestart()" />
                    </control>
                    <panel height="50px" align="center" valign="center"/>
                    <control id="backToMenuButton" name="button" align="center" label="Back to Lobby" width="50%" height="200px">
                        <interact onClick="onClickBackToMenu()" />
                    </control>
                </panel>

            </panel>
        </layer>
    </screen>

</nifty>